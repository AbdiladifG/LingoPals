<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - LingoPals</title>
    <link rel="stylesheet" href="style.css" />
    <link rel="stylesheet" href="dashboard-styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/6.6.6/css/flag-icons.min.css"
    />
  </head>
  <body>
    <!-- Navigation -->
    <nav>
      <div class="container nav-container">
        <div class="logo">LingoPals</div>
        <button class="mobile-menu-btn">
          <i class="fas fa-bars"></i>
        </button>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/profile" class="active">Dashboard</a></li>
          <li>
            <a href="/profile" class="user-profile">
              <img
                src="https://api.dicebear.com/6.x/avataaars/svg?seed=John"
                alt="Profile"
                class="nav-profile-img"
              />
              <%= user.userName %>
            </a>
          </li>
          <li><a href="/logout" class="btn-secondary">Logout</a></li>
        </ul>
      </div>
    </nav>

    <!-- Mobile Menu -->
    <div class="mobile-menu">
      <ul class="mobile-nav-links">
        <li><a href="/">Home</a></li>
        <li><a href="/profile" class="active">Dashboard</a></li>
        <li>
          <a href="#" class="user-profile">
            <img
              src="https://api.dicebear.com/6.x/avataaars/svg?seed=John"
              alt="Profile"
              class="nav-profile-img"
            />
            <%= user.userName %>
          </a>
        </li>
        <li><a href="/logout" class="btn-secondary">Logout</a></li>
      </ul>
    </div>

    <!-- Main Content -->
    <main class="dashboard">
      <div class="container">
        <!-- Profile Section -->
        <section class="profile-section">
          <div class="profile-card">
            <div class="profile-header">
              <div class="profile-image">
                <img
                  src="https://api.dicebear.com/6.x/avataaars/svg?seed=John"
                  alt="John Doe"
                />
                <button class="edit-profile-btn">
                  <i class="fas fa-camera"></i>
                </button>
              </div>
              <div class="profile-info">
                <h1><%= user.userName %></h1>
                <p class="username"><%= user.email %></p>
                <div class="profile-stats">
                  <div class="stat">
                    <span class="stat-value">12</span>
                    <span class="stat-label">Sessions</span>
                  </div>

                  <div class="stat">
                    <span class="stat-value">28h</span>
                    <span class="stat-label">Practice</span>
                  </div>

                  <div class="stat">
                    <span class="stat-value"><%= user.selectedLanguage %></span>
                    <span class="stat-label">Your target lanuage</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Language Rooms Section -->
        <section class="rooms-section">
          <h2>Language Rooms</h2>
          <div class="rooms-grid">
            <div class="room-card">
              <span class=""
                ><img src="/img/english.png" class="flag" alt=""
              /></span>

              <h3>English Room</h3>
              <p>12 learners online</p>
              <div class="room-details">
                <span class="level">All Levels</span>
                <span class="participants">
                  <i class="fas fa-users"></i> 12/20
                </span>
              </div>
              <a href="/room/english" class="join-room-btn">Join Room</a>
            </div>

            <div class="room-card">
              <span class=""
                ><img src="/img/spanish.png" class="flag" alt=""
              /></span>
              <h3>Spanish Room</h3>
              <p>8 learners online</p>
              <div class="room-details">
                <span class="level">Beginner Friendly</span>
                <span class="participants">
                  <i class="fas fa-users"></i> 8/20
                </span>
              </div>
              <a href="/room/spanish" class="join-room-btn">Join Room</a>
            </div>

            <div class="room-card">
              <span class=""
                ><img src="/img/french.png" class="flag" alt=""
              /></span>
              <h3>French Room</h3>
              <p>5 learners online</p>
              <div class="room-details">
                <span class="level">Intermediate</span>
                <span class="participants">
                  <i class="fas fa-users"></i> 5/20
                </span>
              </div>
              <a href="/room/french" class="join-room-btn">Join Room</a>
            </div>

            <div class="room-card">
              <span class=""
                ><img src="/img/mandarin.png" class="flag" alt=""
              /></span>
              <h3>Chinese Room</h3>
              <p>15 learners online</p>
              <div class="room-details">
                <span class="level">All Levels</span>
                <span class="participants">
                  <i class="fas fa-users"></i> 15/20
                </span>
              </div>
              <a href="/room/mandarin" class="join-room-btn">Join Room</a>
            </div>
          </div>
        </section>
      </div>
    </main>

    <script>
      // Mobile menu functionality
      const mobileMenuBtn = document.querySelector(".mobile-menu-btn");
      const mobileMenu = document.querySelector(".mobile-menu");
      const mobileMenuLinks = document.querySelectorAll(".mobile-nav-links a");

      mobileMenuBtn.addEventListener("click", () => {
        mobileMenu.classList.toggle("active");
        mobileMenuBtn.querySelector("i").classList.toggle("fa-bars");
        mobileMenuBtn.querySelector("i").classList.toggle("fa-times");
      });

      mobileMenuLinks.forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenu.classList.remove("active");
          mobileMenuBtn.querySelector("i").classList.add("fa-bars");
          mobileMenuBtn.querySelector("i").classList.remove("fa-times");
        });
      });
    </script>
  </body>
</html>
